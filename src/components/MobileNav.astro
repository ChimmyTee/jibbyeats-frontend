<!-- Main content goes here -->
<button id="open-button" class="bg-gray-800 text-white px-3 py-2 rounded"
  >Open</button
>

<dialog
  id="sidebar-dialog"
  class="h-screen w-64 bg-gray-800 text-white fixed top-0 right-0 transform translate-x-full transition duration-300 ease-in-out z-10"
>
  <div class="dialog-content">
    <button id="close-button" class="bg-gray-800 text-white px-3 py-2 rounded"
      >Close</button
    >
    <h1>Title</h1>
  </div>
</dialog>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const openButton = document.getElementById("open-button")!;
    const closeButton = document.getElementById("close-button")!;
    const dialog = document.getElementById("sidebar-dialog")! as any;

    openButton.addEventListener("click", function () {
      openDialog();
    });

    closeButton.addEventListener("click", function () {
      closeDialog();
    });

    function openDialog() {
      dialog.showModal();
    }

    function closeDialog() {
      dialog.close();
    }

    dialog.addEventListener("click", function (event: any) {
      if (event.target === dialog) {
        closeDialog();
      }
    });
  });
</script>
